@model IEnumerable<RepresentanteMVC.Models.Pedidos>
@{
	ViewData["Title"] = "Pedidos";
}
<style>
	.tabela {
		display: flex;
		background-color: royalblue;
		position: fixed;
	}
</style>
<h1 class="text-center">@ViewData["title"]</h1>
<div style="margin-left:50px;">

	<table class="table">
		<thead>
			<tr>
				<th class="text-center">@Html.DisplayNameFor(pedidos => pedidos.Id)</th>
				<th class="text-center">@Html.DisplayNameFor(pedidos => pedidos.Data)</th>
				<th class="text-center">@Html.DisplayNameFor(pedidos => pedidos.Valor)</th>
				<th class="text-center">@Html.DisplayNameFor(pedidos => pedidos.PercentualComissao)</th>
				<th class="text-center">@Html.DisplayNameFor(pedidos => pedidos.Representante.RazaoSocial)</th>
				<th class="text-center">@Html.DisplayNameFor(pedidos => pedidos.Empresa.RazaoSocial)</th>
				<th class="text-center">@Html.DisplayNameFor(pedidos => pedidos.Loja.RazaoSocial)</th>
				<th class="text-center">@Html.DisplayNameFor(pedidos => pedidos.Status)</th>
			</tr>
		</thead>
		<tbody>
			<div class="tabela">
				@foreach (var pedidos in Model)
				{
				<tr>
					<td>@Html.DisplayFor(model => pedidos.Id)</td>
					<td>@Html.DisplayFor(model => pedidos.Data)</td>
					<td>@Html.DisplayFor(model => pedidos.Valor)</td>
					<td>@Html.DisplayFor(model => pedidos.PercentualComissao)</td>
					<td>@Html.DisplayFor(model => pedidos.Representante.RazaoSocial)</td>
					<td>@Html.DisplayFor(model => pedidos.Empresa.RazaoSocial)</td>
					<td>@Html.DisplayFor(model => pedidos.Loja.RazaoSocial)</td>
					<td>@Html.DisplayFor(model => pedidos.Loja.Status)</td>
					<td>
							@Html.ActionLink("Editar", "Edit", new { id = pedidos.Id }) |
							@Html.ActionLink("Excluir", "Delete", new { id = pedidos.Id }, new { onclick = "return confirm('Tem certeza que deseja excluir o pedido?')" })
					</td>
				</tr>
				}

		</tbody>
	</table>

	<p>
		<a asp-action="Create">Cadastrar</a>
	</p>
</div>

