@{
    ViewData["Title"] = "Agenda Prack";
}

<style>
    html, body {
        margin: 0;
        padding: 0;
        height: 100%;
        overflow: hidden;
        background-color: black; /* Cor de fundo preto */
    }

    .conteudo {        
        height: calc(100vh - 50px); /* 50px é a altura estimada do rodapé */        
        width:100%;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        overflow: hidden;
        background: url('./img/home04.jpg') no-repeat center center;
        background-size: cover;        
    }

    .conteudo h1 {
        margin-top: 200px; /* Ajusta o espaço acima do título */
            color: #fff;
            text-shadow: 0 0 5px #0000ff, 0 0 10px #0000ff, 0 0 20px #0000ff, 0 0 40px #0000ff, 0 0 80px #0000ff;
    }
</style>

<div class="conteudo">
    <h1 class="display-4">Agenda Prack</h1>
</div>